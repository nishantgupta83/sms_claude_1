# SMS Mirror Backend Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Security
JWT_SECRET=your_super_secret_jwt_key_here_change_this
API_KEY=sms_mirror_api_key_2024

# Database (Optional - using in-memory for now)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=sms_mirror
# DB_USER=postgres
# DB_PASS=password

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# WebSocket Configuration
WS_TIMEOUT=30000
WS_HEARTBEAT=25000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# SMS Configuration
MAX_MESSAGE_LENGTH=1600
MAX_HISTORY_SIZE=1000

# Device Management
MAX_DEVICES_PER_ACCOUNT=5
DEVICE_TIMEOUT=300000

# Production Settings (uncomment for production)
# NODE_ENV=production
# PORT=80
# CORS_ORIGIN=https://yourdomain.com
